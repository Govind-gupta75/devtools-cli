{
  "name": "uxp-devtools-cli",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/uxp-templates-pack/*"
    ],
    "nohoist": [
      "**/chrome-devtools-frontend",
      "**/chrome-devtools-frontend/**",
      "**/electron-squirrel-startup",
      "**/electron-squirrel-startup/**",
      "**/electron",
      "**/electron/**",
      "**/@electron-forge/cli",
      "**/@electron-forge/cli/**"
    ]
  },
  "scripts": {
    "test": "jest --runInBand",
    "lint": "eslint --fix packages/**/*.js ",
    "postinstall": "node scripts/installScript.js",
    "cleanup": "node scripts/cleanup.js"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^26.0.1"
  },
  "dependencies": {
    "fancy-log": "^1.3.3"
  }
}
